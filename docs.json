{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Plurex Docs",
  "colors": {
    "primary": "#ba54f5",
    "light": "#16C99D",
    "dark": "#0C9473"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Getting started",
            "pages": [
              "index",
              "quickstart",
              "development"
            ]
          },
          {
            "group": "Customization",
            "pages": [
              "essentials/settings",
              "essentials/navigation"
            ]
          },
          {
            "group": "Writing content",
            "pages": [
              "essentials/markdown",
              "essentials/code",
              "essentials/images",
              "essentials/reusable-snippets"
            ]
          }
        ]
      },
      {
        "tab": "API reference",
        "groups": [
          {
            "group": "Platform API",
            "pages": [

            ],
            "openapi": {
              "source": "api-reference/platform/plurex-platform-1.0.0.openapi.yaml"
            }
          },
          {
            "group": "Protocols API",
            "pages": [

            ],
            "openapi": {
              "source": "api-reference/protocols/plurex-protocols-1.0.0.openapi.yaml"
            }
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Documentation",
          "href": "https://mintlify.com/docs",
          "icon": "book-open-cover"
        },
        {
          "anchor": "Blog",
          "href": "https://mintlify.com/blog",
          "icon": "newspaper"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "https://support.plurex.io/portal/en/newticket"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Platform",
      "href": "https://platform.plurex.io"
    }
  },
  "contextual": {
    "options": [
     "copy",
     "view",
     "chatgpt",
     "claude",
     "perplexity",
     "mcp",
     "cursor",
     "vscode"
   ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/mintlify",
      "github": "https://github.com/mintlify",
      "linkedin": "https://linkedin.com/company/mintlify"
    }
  }
}
